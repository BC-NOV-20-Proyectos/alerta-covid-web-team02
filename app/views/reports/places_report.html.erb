<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<div class="header" id="header">
        <h1 class="site_title" id="site_title">Places Report</h1>
        <ul class="header-item tabs" id="utility_nav">
          <li class="menu_item" id="logout"><a data-method="delete" href="<%= @path_signout %>">Logout</a></li>
        </ul>
</div>
<div class="container h-100 mainContainer h-v-100">
    <div class="row table-row">
        <form class="col-12 formDate" method="POST" action="/reports/place_reports">
            <div>
                <label>from</label>
                <input type="text" id="dateFrom" class="date_from" name="time_from" value="<%= params[:time_from] %>" autocomplete="off">
            </div>
            <div class="ms-2">
                <label>To</label>
                <input type="text" id="dateTo" name="time_to" value="<%= params[:time_to] %>" autocomplete="off">
            </div>
            <div class="ms-2">
                <input type="submit" value="Generar">
            </div>
        </form>
        <div class="table-responsive col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Institute</th>
                        <th>Area</th> 
                        <th>Name</th>
                        <th class="text-center">Symptomatic</th> 
                        <th class="text-center">Covid Positive</th> 
                        <th class="text-center">Covid Negative</th>
                    <tr>
                </thead>
                <tbody>
                    <% @places_report.each do |incident| %>
                    <tr>
                        <td>
                            <%= incident[:institute] %>
                        </td>
                        <td>
                            <%= incident[:area] %>
                        </td>
                        <td>
                            <%= incident[:name] %>
                        </td>
                        <td class="text-center">
                            <%= incident[:symptomatic] %>
                        </td>
                        <td class="text-center">
                            <%= incident[:covid_positive] %>
                        </td>
                        <td class="text-center">
                            <%= incident[:covid_negative] %>
                        </td>
                    </tr>
                    <%end%>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%= javascript_pack_tag 'reports.js'%>
